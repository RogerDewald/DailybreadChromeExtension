{
    "manifest_version": 3,
    "name": "Dailybread Airtable Tool",
    "version": "0.1",
    "description": "Fetch data from Airtable and perform calculations.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://airtable.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://airtable.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}
